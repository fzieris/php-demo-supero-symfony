{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }} - Held {{ hero.name }}
{% endblock %}

{% block content %}
    <h1>Held {{ hero.name }}</h1>
    <div class="row">

    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-6 col-md-4 col-lg-3">
        <p><img src="{{ asset( 'img/' ~ hero.name|lower ~ '.jpg') }}" alt="{{ hero.name }}" class="img-rounded img-responsive"></p>
    </div>
    <div class="col-sm-6 col-md-8 col-lg-9">
        <table class="table">
            <tr><th>Name</th><td>{{ hero.name }}</td></tr>
            <tr><th>Kosten</th><td>{{ hero.price }}</td></tr>
            <tr>
                <th>Status</th>
                <td class="{{ hero.status|bootstrap }}">
                    {{ hero.status }}
                </td>
            </tr>
            <tr><td colspan="2">{{ hero.text }}</td></tr>
        </table>
    </div>

    </div>

    <hr>
    <a href="{{ path('helden_liste') }}" class="btn btn-default">Zurück zur Heldenübersicht</a>

{% endblock %}
